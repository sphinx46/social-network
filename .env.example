# =============================================
# Keycloak Secrets (заполнить реальными значениями)
# =============================================
KEYCLOAK_CLIENT_SECRET=your_keycloak_client_secret
SIGNATURE_KEY_SECRET=your_signature_key
JWT_SIGNING_KEY=your_jwt_signing_key
TOKEN_SIGNING_KEY=your_token_signing_key

# =============================================
# Redis Configuration
# =============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_TIMEOUT=5000ms

# =============================================
# Kafka Configuration
# =============================================
KAFKA_KRAFT_MODE=true
KAFKA_PROCESS_ROLES=broker,controller
KAFKA_NODE_ID=1
KAFKA_CONTROLLER_QUORUM_VOTERS=1@kafka:9093
KAFKA_LISTENERS=PLAINTEXT_INTERNAL://:29092,PLAINTEXT_EXTERNAL://:9092,CONTROLLER://:9093
KAFKA_ADVERTISED_LISTENERS=PLAINTEXT_INTERNAL://kafka:29092,PLAINTEXT_EXTERNAL://localhost:9092
KAFKA_LISTENER_SECURITY_PROTOCOL_MAP=CONTROLLER:PLAINTEXT,PLAINTEXT_INTERNAL:PLAINTEXT,PLAINTEXT_EXTERNAL:PLAINTEXT
KAFKA_INTER_BROKER_LISTENER_NAME=PLAINTEXT_INTERNAL
KAFKA_CONTROLLER_LISTENER_NAMES=CONTROLLER
KAFKA_AUTO_CREATE_TOPICS_ENABLE=true
KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1
KAFKA_NUM_PARTITIONS=3
KAFKA_BOOTSTRAP_SERVERS_INTERNAL=kafka:29092
KAFKA_BOOTSTRAP_SERVERS_EXTERNAL=localhost:9092

# =============================================
# Content Service Configuration
# =============================================
CONTENT_SERVICE_PORT=8083
CONTENT_DB_URL=jdbc:postgresql://content-postgres:5432/content
CONTENT_DB_USERNAME=content
CONTENT_DB_PASSWORD=content
CONTENT_DB_EXTERNAL_PORT=5436
CONTENT_POSTGRES_EXPORTER_PORT=9182
CONTENT_EUREKA_INSTANCE_HOSTNAME=content-service

# =============================================
# Messaging Service Configuration
# =============================================
MESSAGING_SERVICE_PORT=8085
MESSAGING_DB_URL=jdbc:postgresql://messaging-postgres:5432/messaging
MESSAGING_DB_USERNAME=messaging
MESSAGING_DB_PASSWORD=messaging
MESSAGING_EUREKA_INSTANCE_HOSTNAME=messaging-service

# =============================================
# User Profile Service Configuration
# =============================================
USER_PROFILE_SERVICE_PORT=8081
USER_PROFILE_EUREKA_INSTANCE_HOSTNAME=user-profile-service

# =============================================
# Upload Service Configuration
# =============================================
UPLOAD_SERVICE_PORT=8084
UPLOAD_EUREKA_INSTANCE_HOSTNAME=upload-service

# =============================================
# API Gateway Configuration
# =============================================
API_GATEWAY_PORT=8082
API_GATEWAY_EUREKA_INSTANCE_HOSTNAME=api-gateway

# =============================================
# Eureka Configuration
# =============================================
EUREKA_CLIENT_SERVICE_URL_DEFAULT_ZONE=http://eureka-server:8761/eureka/
EUREKA_SERVER_PORT=8761

# =============================================
# Spring Profiles
# =============================================
SPRING_PROFILES_ACTIVE=dev

# =============================================
# CORS Configuration
# =============================================
CORS_ALLOWED_ORIGINS=http://localhost:*,http://127.0.0.1:*
WEBSOCKET_ALLOWED_ORIGINS=http://localhost:*,http://127.0.0.1:*

# =============================================
# Test Configuration
# =============================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
TEST_SIGNATURE_SECRET=test-signature-secret

# =============================================
# Instructions
# =============================================
# 1. Скопируйте этот файл в .env
# 2. Заполните реальными значениями
# 3. Для генерации секретных ключей можно использовать команду:
#    openssl rand -base64 32 | head -c 32